<div class = "container" style = "min-height:700px;">
  <div class = "row">
    <div class = "mx-auto mt-5 mb-4" style = "border:2px double;width:70%;">
      <div class = "row">
        <div class = "mx-auto mt-4" style = "width:50%;">
          <h2>新規登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "members/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :last_name,"姓" %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="field">
              <%= f.label :first_name,"名" %><br />
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",size: 40 %>
            </div>

            <div class="field">
              <%= f.label :postal_code,"郵便番号" %><br />
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>

             <div class="field">
              <%= f.label :address,"住所" %><br />
              <%= f.text_field :address, autofocus: true, autocomplete: "address",size: 40 %>
            </div>

             <div class="field">
              <%= f.label :telephone_number,"電話番号" %><br />
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>

            <div class="field">
              <%= f.label :password,"パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",placeholder: "(最低6文字)",size: 40 %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation,"パスワード" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "(上記と同じものを入力してください)",size: 40  %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録",class: "mt-2" %>
            </div>
          <% end %>

          <%= render "members/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>