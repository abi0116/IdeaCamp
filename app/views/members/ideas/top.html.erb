  <!--  </div>-->
  <!--  <%# end %>-->
</div>
<div class = "tag-list-box">
  <div class = "tag-list">
    <p>タグ一覧</p>
    <% if @tags.present? %>
      <% @tags.each do |tag| %>
        <%= link_to "##{tag.name}(#{tag.taggings_count})",ideas_path(tag_name: tag.name) %>
      <% end %>
    <% else %>
      <p>登録されているタグはありません</p>
    <% end %>
  </div>
  <br>
</div>

