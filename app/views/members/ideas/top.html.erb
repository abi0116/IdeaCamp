<div class = "container mb-3">
  <div class = "row">
    <div class = "main-top d-flex mt-4 mx-auto">
      <div class = "main-top-logo mr-5 mt-4" >
        <div class = "text-center">
          <%= image_tag(src= "logo.png", size: "200x200") %>
        </div>
        <div class = "box-top" >
          <p>
            あったらいいな<br>
            そんな思いを形にする場所
          </p>
        </div>
      </div>
      <div class="top-image">
        <div class="top-photo-1"><%= image_tag(src= "4237050_s.jpg", size: "600x400") %></div>
        <div class="top-photo-2"><%= image_tag(src= "top_cycling.jpg", size: "600x400") %></div>
        <div class="top-photo-3"><%= image_tag(src= "top_skiing.jpg", size: "600x400") %></div>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "main-content mt-4 mx-auto text-center">
      <div class = "concept">
        <h5>コンセプト</h5>
        <h1>CONCEPT</h1>
        <%= image_tag(src= "concept.png", size: "700x400") %>
      </div>
    </div>
  </div>
</div>
<div class = "genre">
  <h5>ジャンル</h5>
  <h1>GENRE</h1>
  <div class = "genre-icon-list">
    <% @genres.each do |genre| %>
      <div class = "genle-icon">
        <%= link_to genre_path(genre_id: genre.id) do %>
          <%= attachment_image_tag genre,:genre_image,:fill,350,200,format: "jpg",follback: image_url("no_image.jpg") %><br>
          <%= genre.name %>
        <% end %>
      </div>
    <% end %>
  </div>
