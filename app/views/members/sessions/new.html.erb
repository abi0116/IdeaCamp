<div class = "container" style = "height:550px;">
  <div class = "row">
    <div class = "mx-auto mt-5 mb-4" style = "border:2px double;width:40%;">
      <div class = "row">
        <div class = "mx-auto mt-4">
          <h2>ログイン</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= flash[:alert]%><!--ログイン時のエラー文はアラートで表示しなけらばならないみたい-->
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>



            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "current-password",size: 40 %>
            </div>

            <%# if devise_mapping.rememberable? %>
              <!--<div class="field">-->
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me,"上記の項目を記録する" %>
              <!--</div>-->
            <%# end %>

            <div class="actions">
              <%= f.submit "ログイン",class: "mt-2" %>
            </div>
          <% end %>

          <%= render "members/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
