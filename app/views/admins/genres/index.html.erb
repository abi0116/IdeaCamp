<div class="container" style = "min-height:550px;">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row">
    <%= form_with model:@genre, url: admins_genres_path, local: true do |f| %>
    <table class="new-genre-form table table-borderless">
      <tr>
        <td><%= f.label :name, "ジャンル名" %></td>
        <td><%= f.text_field :name %></td>
        <td><%= f.label :genre_image,"添付写真(必須)",class: "mt-3" %></td>
        <td><%= f.attachment_field :genre_image %></td>
        <td><%= f.submit "新規登録", class: "btn btn-create btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>

  <div class="row">
    <div class="col-4">
    <table class="table">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-create",data: {confirm: "現在このジャンルに紐づいている投稿のジャンルが、編集後のものに自動的に置き換わりますがよろしいですか？"},class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>