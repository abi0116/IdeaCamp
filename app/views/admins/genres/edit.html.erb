<div class="container" style = "min-height:550px;">
  <div class="row">
    <h2 class = "mx-auto">ジャンル編集</h2>
  </div>
  <div class="row">
    <div class="genre-edit-form mx-auto">
      <%= form_with model:[:admins, @genre], local: true do |f| %>
        <table class="table">
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :genre_image,"添付写真(必須)",class: "mt-3" %></td>
            <td><%= f.attachment_field :genre_image %></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存", class: "btn btn-create btn-success" %></td>
            <td><%= link_to "削除", admins_genre_path(@genre.id), method: :delete, class: "btn btn-delete btn-danger",data: {confirm: "※現在このジャンルに紐づいている投稿が、すべて削除されてしまいますがよろしいですか？"} %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>